<?xml version="1.0" encoding="UTF-8" ?>
<install version="1.5" type="plugin" group="vmpayment" >
    <name>VMPAYMENT_SVEA_DIRECTBANK</name>
    <creationDate>July 30 2012</creationDate>
    <author>Shaho Ghobadi</author>
    <authorUrl>http://www.sveawebpay.se</authorUrl>
    <copyright>Copyright (C) 2012 SveaWebPay - Svea Ekonomi</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>VMPAYMENT_SVEA_VERSION</version>
    <description>SveaWebPay payment plugin</description>
    <languages>
	<language tag="en-GB">en-GB.plg_vmpayment_svea.ini</language>
        <language tag="sv-SE">sv-SE.plg_vmpayment_svea.ini</language>
        <language tag="de-DE">de-DE.plg_vmpayment_svea.ini</language>
        <language tag="fi-FI">fi-FI.plg_vmpayment_svea.ini</language>
   </languages>
    <files>
	<filename plugin="sveadirectbank">sveadirectbank.php</filename>
    </files>
    <params addpath="/administrator/components/com_virtuemart/elements">
	<param type="vmjpluginwarning" />
	<param	name="payment_logos" type="vmfiles" label="VMPAYMENT_SVEA_LOGOS"
		description="VMPAYMENT_SVEA_LOGOS_DESC"
		directory="/images/stories/virtuemart/payment/"
		default="default" hide_default="1" hide_none="1"
		stripext="0"   exclude="^_" />

        <param name="testmode_directbank" type="radio" default="1" label="VMPAYMENT_SVEA_TESTMODE" description="VMPAYMENT_SVEA_TESTMODE_DESC">
             <option value="1">COM_VIRTUEMART_YES</option>
             <option value="0">COM_VIRTUEMART_NO</option>
        </param>
        <param name="merchantid_directbank_test" type="text"  label="VMPAYMENT_SVEA_MERCHANTID_TEST" />
        <param name="secret_directbank_test" type="text"  label="VMPAYMENT_SVEA_SECRET_TEST" />
        <param name="merchantid_directbank_prod" type="text"  label="VMPAYMENT_SVEA_MERCHANTID_PROD" />
        <param name="secret_directbank_prod" type="text"  label="VMPAYMENT_SVEA_SECRET_PROD" />

        <param name="countries" type="vmcountries"  scope="com_virtuemart" default="" label="VMPAYMENT_SVEA_COUNTRIES" description="VMPAYMENT_SVEA_COUNTRIES_DESC"/>
        <param name="payment_currency" type="vmacceptedcurrency" default="" label="VMPAYMENT_SVEA_CURRENCY" description="VMPAYMENT_SVEA_CURRENCY_DESC" />    

        <param name="min_amount" type="text"  label="VMPAYMENT_SVEA_MIN_AMOUNT" description="VMPAYMENT_SVEA_MIN_AMOUNT_EXPLAIN" />
	<param name="max_amount" type="text"  label="VMPAYMENT_SVEA_MAX_AMOUNT" description="VMPAYMENT_SVEA_MAX_AMOUNT_EXPLAIN" />

        <param name="cost_percent_total" type="text"  label="VMPAYMENT_SVEA_COST_PERCENT_TOTAL" description="VMPAYMENT_SVEA_COST_PERCENT_TOTAL_EXPLAIN" />   
        <param name="cost_per_transaction" type="text"  label="VMPAYMENT_SVEA_INVOICEFEE" description="VMPAYMENT_SVEA_INVOICEFEE_EXPLAIN" />      
        <param name="tax_id" type="vmtaxes" scope="com_virtuemart"  label="VMPAYMENT_SVEA_TAX" description="VMPAYMENT_SVEA_TAX_DESC" />

        <param name="payment_info" type="textarea" cols="60" rows="30" default="add a message to display with the order" label="VMPAYMENT_SVEA_PAYMENTINFO" description="VMPAYMENT_SVEA_PAYMENTINFO_EXPLAIN" />

    </params>
</install>
